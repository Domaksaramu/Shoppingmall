  <h2>Manager page</h2>
</div>
<hr>
<form action="/clothes/edit_complete" method="post">
	<input type="hidden" name="id" value="<%= @product.id %>">
	<p style="color: #ff0000">Category:<select name="product_category" >
		<option value="Man">Man</option>
		<option value="Woman">Woman</option>
		<option value="Accessory">Accessory</option>
	</select></p>
	<p style="color :#0000ff">Category2:<select name="product_category2">
    <option value="tshirt">티셔츠</option>
    <option value="shirt">셔츠</option>
    <option value="cardigan">가디건</option>
    <option value="jacket">자켓</option>
    <option value="pants">팬츠</option>
    <option value="shorts">반바지</option>
    <option value="denim">데님</option>
    <option value="homewear">홈웨어</option>
    <option value="accessory">엑세서리</option>
    <option value="sale">Sale</option>
  </select>

	<p>image url:	<input type="text" name="product_image_url" value="<%= @product.image_url%>"></p>
	<p>title:	<input type="text" name="product_title" value="<%= @product.title%>"></p>
	<p>price: <input type="integer" name="product_price" value="<%=@product.price%>"></p>
	<p>content:	<textarea name="product_content"><%= @product.content%></textarea></p>
	<input type="submit" value="Edit">
</form>
